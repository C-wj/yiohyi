/**app.wxss**/
/* 全局主题变量 */
page {
  --primary-color: #FF9500;
  --primary-color-light: #FFE4BF;
  --secondary-color: #4CAF50;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-placeholder: #999999;
  --bg-primary: #FFFFFF;
  --bg-secondary: #F6F6F6;
  --border-color: #EEEEEE;
  --error-color: #E53935;
  --warning-color: #FFB300;
  --success-color: #4CAF50;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
  color: var(--text-primary);
  background-color: var(--bg-secondary);
}

/* 通用容器样式 */
.container {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 120rpx; /* 防止内容被底部导航栏遮挡 */
}

/* 通用卡片样式 */
.card {
  background-color: var(--bg-primary);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

/* 通用标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-primary);
}

/* 通用状态栏样式 */
.status-bar {
  height: 88rpx;
  background-color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 32rpx;
  position: relative;
}

/* 通用搜索栏样式 */
.search-bar {
  padding: 20rpx 30rpx;
  background-color: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-color);
}

/* 通用标签栏样式 */
.tabs-container {
  background-color: var(--bg-primary);
}

/* 通用按钮样式 */
.primary-button {
  background-color: var(--primary-color);
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  text-align: center;
  display: inline-block;
}

.secondary-button {
  background-color: var(--bg-secondary);
  color: var(--text-primary);
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  text-align: center;
  display: inline-block;
}

/* 通用空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  color: #CCCCCC;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
}

/* 通用加载样式 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

/* 隐藏原生滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 清除浮动 */
.clearfix:after {
  content: '';
  display: table;
  clear: both;
} 