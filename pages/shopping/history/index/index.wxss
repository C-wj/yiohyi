/* 页面容器 */
.shopping-history-container {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部状态栏 */
.status-bar {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.history-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-date {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.history-count {
  font-size: 28rpx;
  color: #999;
}

.history-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.preview-item {
  background-color: #f2f2f2;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.preview-more {
  font-size: 26rpx;
  color: #999;
  padding: 8rpx 0;
}

.history-footer {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.history-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #0052d9;
}

/* 清空历史按钮 */
.clear-history {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

/* 详情弹窗内容 */
.detail-content {
  padding: 20rpx;
  max-height: 60vh;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 16rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}

.detail-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 8rpx 0;
}

.item-name {
  color: #333;
}

.item-quantity {
  color: #666;
}

.detail-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
} 