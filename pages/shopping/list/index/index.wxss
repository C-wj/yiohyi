/* 页面容器 */
.shopping-list-container {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 120rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部状态栏 */
.status-bar {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.history-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #0052d9;
}

/* 添加物品区域 */
.add-item-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.add-item-form {
  display: flex;
  flex-direction: column;
}

.item-input {
  margin-bottom: 16rpx;
}

.item-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity-section {
  display: flex;
  gap: 16rpx;
  flex: 1;
}

.quantity-input {
  width: 40%;
}

.unit-input {
  width: 40%;
}

/* 购物列表区域 */
.shopping-list-content {
  display: flex;
  flex-direction: column;
}

/* 批量操作区域 */
.batch-operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.operation-buttons {
  display: flex;
  gap: 16rpx;
}

/* 列表区域 */
.list-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.item-count {
  font-size: 28rpx;
  color: #999;
  font-weight: normal;
  margin-left: 8rpx;
}

/* 列表项目 */
.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

.item-checkbox {
  margin-right: 16rpx;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.item-details {
  display: flex;
  font-size: 26rpx;
  color: #666;
}

.item-quantity {
  margin-right: 16rpx;
}

.item-category {
  color: #0052d9;
  background-color: rgba(0, 82, 217, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.item-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 已完成项目样式 */
.completed-section {
  opacity: 0.8;
}

.completed .item-name {
  color: #999;
  text-decoration: line-through;
}

.clear-completed {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding-top: 20rpx;
  margin-top: 16rpx;
  border-top: 1rpx solid #eee;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

/* 导入菜谱按钮 */
.import-recipe {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 100;
}

/* 编辑弹窗 */
.edit-dialog-content {
  padding: 0 24rpx;
}

.edit-item-details {
  display: flex;
  gap: 16rpx;
  margin: 16rpx 0;
}

.shop-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
}

.left {
  margin-right: 20rpx;
}

.content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name-wrapper {
  display: flex;
  align-items: center;
}

.name {
  font-size: 32rpx;
  color: #333;
  margin-right: 12rpx;
}

.recipe-badge {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  background-color: #FF9500;
  color: white;
  border-radius: 8rpx;
  margin-left: 8rpx;
}

.amount {
  display: flex;
  align-items: center;
  color: #666;
}

.quantity {
  font-size: 28rpx;
  margin-right: 4rpx;
}

.unit {
  font-size: 24rpx;
}

.right {
  padding: 0 12rpx;
} 