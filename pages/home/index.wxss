/* 主容器 */
.home-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏样式 - 已移除 */

/* 分类标签样式 */
.category-tabs {
  background-color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.custom-tabs {
  --td-tab-item-color: #666;
  --td-tab-item-active-color: #FF9500;
  --td-tab-item-stroke: #FF9500;
  --td-tab-track-color: #FF9500;
}

/* 内容区域 */
.home-content {
  flex: 1;
  background-color: #f5f5f5;
}

/* 轮播图容器 */
.swiper-container {
  padding: 24rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

/* 通用部分标题样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: baseline;
}

.large-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-title .subtitle {
  font-size: 24rpx;
  color: #888;
  font-weight: normal;
  margin-left: 12rpx;
}

/* 视图更多按钮样式 - 已移除 */

/* 加载中样式 */
.centered {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

/* 今日推荐部分样式 */
.recommendation-section {
  padding-bottom: 24rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.recommendation-scroll {
  white-space: nowrap;
  overflow: hidden;
}

.recommendation-list {
  display: flex;
  padding: 0 24rpx;
}

.recommendation-item {
  width: 300rpx;
  margin-right: 20rpx;
  display: inline-block;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  background-color: #fff;
}

.recommendation-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.recommendation-info {
  padding: 16rpx;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommendation-meta {
  font-size: 24rpx;
  color: #888;
  display: flex;
  align-items: center;
}

.dot-separator {
  margin: 0 4rpx;
}

/* 应季食材部分样式 */
.seasonal-section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  padding-bottom: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.seasonal-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  padding: 0 24rpx;
}

.seasonal-item {
  aspect-ratio: 1/1;
}

.seasonal-item-inner {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.seasonal-item-inner:active {
  background-color: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

/* 热门菜谱部分 */
.hot-recipes {
  background-color: #ffffff;
  padding: 20rpx 0 40rpx;
  margin: 0 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

/* 菜谱列表 */
.recipe-list {
  padding: 0 24rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  box-sizing: border-box;
  width: auto;
  margin-top: 10rpx;
}

.recipe-item {
  margin-bottom: 0;
  box-sizing: border-box;
}

.recipe-item:last-child {
  margin-bottom: 0;
}

/* 加载更多 */
.loading-more, .loading-end {
  text-align: center;
  padding: 16rpx 0;
  color: #999;
  font-size: 24rpx;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-more text {
  margin-left: 10rpx;
}

/* 发布按钮 */
.home-release {
  position: fixed;
  right: 30rpx;
  bottom: 130rpx;
  z-index: 99;
}

.recipe-header {
  display: block; /* 恢复标题显示 */
} 