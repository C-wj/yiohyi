.forgot-password {
  display: flex;
  flex-direction: column;
  flex: 1;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f6f6f6;
  padding: 40rpx;
}

.forgot-password__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
  margin-top: 32rpx;
}

.forgot-password__header .title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.forgot-password__header .subtitle {
  font-size: 28rpx;
  color: #888;
}

.forgot-password__content {
  background-color: white;
  padding: 48rpx 32rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 选项卡样式 */
.forgot-password__tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #eee;
}

.forgot-password__tab {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #999;
  position: relative;
}

.forgot-password__tab.active {
  color: #0052d9;
  font-weight: 500;
}

.forgot-password__tab.active::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #0052d9;
  border-radius: 2rpx;
}

.forgot-password__form {
  margin-bottom: 32rpx;
}

.forgot-password__button {
  margin-top: 48rpx;
}

/* 验证码输入框样式 */
.suffix {
  display: flex;
  align-items: center;
}

.suffix--line {
  width: 1rpx;
  height: 36rpx;
  background-color: #ddd;
  margin: 0 16rpx;
} 