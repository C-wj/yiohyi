.login {
  display: flex;
  flex-direction: column;
  flex: 1;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f6f6f6;
  padding: 40rpx;
}

.login__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
  margin-top: 32rpx;
}

.login__header .logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}

.login__title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.login__subtitle {
  font-size: 28rpx;
  color: #888;
}

.login__content {
  background-color: white;
  padding: 48rpx 32rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.login__password {
  margin-bottom: 32rpx;
}

.login__register {
  margin-top: 40rpx;
  margin-bottom: 32rpx;
}

.login__tips {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.login__button {
  margin-top: 48rpx;
  margin-bottom: 24rpx;
}

.login__others {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 16rpx;
}

.login__others-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
  position: relative;
}

.login__others-label::before,
.login__others-label::after {
  content: '';
  position: absolute;
  height: 1px;
  width: 80rpx;
  background-color: #eee;
  top: 50%;
}

.login__others-label::before {
  left: -100rpx;
}

.login__others-label::after {
  right: -100rpx;
}

.login__others-buttons {
  display: flex;
  justify-content: center;
}

.login__others-buttons .button {
  margin: 0 16rpx;
}

.radio-class {
  margin-bottom: 40rpx;
  padding-left: 0;
}

.radio-class-icon {
  font-size: 48rpx;
}

.radio-class-label {
  font-size: 28rpx;
  color: #666;
} 