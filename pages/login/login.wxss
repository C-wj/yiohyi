/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 0 30rpx;
}

/* 头部区域 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 60rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 表单区域 */
.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

/* 注册标题 */
.register-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
}

/* 标签页 */
.tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.tab {
  position: relative;
  padding: 0 20rpx 20rpx;
  font-size: 30rpx;
  color: #666;
  margin-right: 40rpx;
}

.tab.active {
  color: #07c160;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -1rpx;
  width: 100%;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 输入组 */
.input-group {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
  position: relative;
  margin-bottom: 10rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-icon image {
  width: 100%;
  height: 100%;
}

.input {
  flex: 1;
  height: 48rpx;
  font-size: 28rpx;
}

.placeholder {
  color: #ccc;
}

/* 验证码按钮 */
.code-input {
  width: 60%;
}

.code-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  color: #07c160;
  padding: 10rpx 20rpx;
  border-left: 1rpx solid #eee;
}

.code-btn.disabled {
  color: #ccc;
}

/* 忘记密码 */
.action-row {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.forget-text {
  font-size: 26rpx;
  color: #07c160;
}

/* 协议区域 */
.agreement {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.agreement checkbox {
  transform: scale(0.8);
  margin-right: 8rpx;
}

.agreement-text {
  font-size: 26rpx;
  color: #999;
}

/* 按钮区域 */
.btn-area {
  margin: 40rpx 0 20rpx;
}

.primary-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  font-weight: 500;
  border: none;
}

.primary-btn.disabled {
  background-color: #9be6b4;
}

.primary-btn::after {
  border: none;
}

/* 切换登录/注册 */
.switch-action {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 30rpx;
}

.link-text {
  color: #07c160;
}

/* 其他登录方式 */
.other-login {
  margin-top: 60rpx;
}

.divider {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.divider-line {
  width: 30%;
  height: 1rpx;
  background-color: #eee;
}

.divider-text {
  font-size: 26rpx;
  color: #999;
  padding: 0 20rpx;
}

.other-login-btn {
  display: flex;
  justify-content: center;
}

.wechat-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 0;
  line-height: normal;
}

.wechat-btn::after {
  border: none;
}

.wechat-btn image {
  width: 50rpx;
  height: 50rpx;
}

/* 选项卡样式 */
.login__tab-bar {
  display: flex;
  margin-bottom: 40rpx;
}

.login__tab {
  padding: 20rpx 10rpx;
  font-size: 32rpx;
  color: #999;
  margin-right: 40rpx;
  position: relative;
}

.login__tab.active {
  color: #333;
  font-weight: 500;
}

.login__tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #333;
  border-radius: 2rpx;
}

.login__password,
.login__code {
  margin-bottom: 32rpx;
}

.login__actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.login__forget {
  font-size: 28rpx;
  color: #0066cc;
  text-align: right;
}

.login__register {
  margin-bottom: 32rpx;
}

.login__agreement {
  display: flex;
  align-items: center;
  margin: 24rpx 0;
  font-size: 28rpx;
  color: #666;
}

.login__agreement checkbox {
  transform: scale(0.8);
  margin-right: 8rpx;
}

.login__button {
  margin-top: 48rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #0052d9;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.submit-btn[disabled] {
  background-color: #cccccc;
  color: #fff;
}

.login__switch {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 32rpx;
}

.login__switch .link {
  color: #0066cc;
}

.login__others {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.login__others-line {
  position: relative;
  text-align: center;
  margin-bottom: 48rpx;
  width: 100%;
}

.login__others-line::before,
.login__others-line::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 35%;
  height: 1px;
  background-color: #eee;
}

.login__others-line::before {
  left: 0;
}

.login__others-line::after {
  right: 0;
}

.login__others-text {
  display: inline-block;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #999;
  background-color: #fff;
  position: relative;
  z-index: 1;
}

.login__others-buttons {
  display: flex;
  justify-content: center;
}

.wechat-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 2rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  position: relative;
}

.wechat-btn::after {
  content: '';
  width: 44rpx;
  height: 44rpx;
  background-image: url('data:image/svg+xml;base64,');
  background-repeat: no-repeat;
  background-size: cover;
}

/* 表单样式 */
t-input {
  margin-bottom: 30rpx;
  height: 96rpx;
  border-bottom: 1px solid #eee;
}

.suffix {
  display: flex;
  align-items: center;
}

.suffix--line {
  width: 1rpx;
  height: 36rpx;
  background-color: #ddd;
  margin: 0 16rpx;
}

.radio-class {
  margin-bottom: 40rpx;
  padding-left: 0;
}

.radio-class-icon {
  font-size: 48rpx;
}

.radio-class-label {
  font-size: 28rpx;
  color: #666;
} 