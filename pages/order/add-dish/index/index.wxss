/* 页面容器 */
.add-dish-container {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 顶部状态栏 */
.status-bar {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 表单区域 */
.dish-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4d4f;
}

/* 类型选择 */
.type-options {
  display: flex;
  gap: 40rpx;
}

/* 分类选择 */
.category-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx 40rpx;
}

/* 菜谱选择器 */
.recipe-selector {
  border: 1rpx dashed #d9d9d9;
  border-radius: 8rpx;
  overflow: hidden;
  height: 160rpx;
}

.empty-recipe {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  gap: 12rpx;
}

.selected-recipe {
  display: flex;
  height: 100%;
}

.recipe-image {
  width: 160rpx;
  height: 160rpx;
  object-fit: cover;
}

.recipe-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.recipe-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.recipe-author {
  font-size: 26rpx;
  color: #999;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 24rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bottom-buttons .t-button {
  flex: 1;
} 