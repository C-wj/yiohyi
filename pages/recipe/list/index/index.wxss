/* 页面容器 */
.recipe-list-container {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部状态栏 */
.status-bar {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 24rpx;
}

/* 分类标签区域 */
.tabs-container {
  margin-bottom: 24rpx;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 菜谱列表 */
.recipes-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.recipe-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
} 